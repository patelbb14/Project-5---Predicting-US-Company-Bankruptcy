corr= bank.corr(numeric_only = True)

# Getting the Upper Triangle of the co-relation matrix
matrix = np.triu(corr)

plt.figure(figsize=(12,6))
sns.heatmap(data = corr,
            annot = True,
            vmin = -1,
            vmax = 1,
           cmap = "coolwarm",
           mask = matrix);
